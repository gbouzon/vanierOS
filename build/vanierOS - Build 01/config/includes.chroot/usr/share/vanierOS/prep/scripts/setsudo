#!/bin/bash

# setsudo -- Revision: 111r1 -- by eznix (https://sourceforge.net/projects/eznixos/)
# (GNU/General Public License version 3.0)

setsudoer () {
  read -p "Type your user name, be exact, and press Enter: " ANS
  usermod -aG sudo $ANS
}

setsudoer

done

