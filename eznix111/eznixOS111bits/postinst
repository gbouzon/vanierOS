# Get user with uid 1000 and Test for symlink on desktop
  [[ ! -L "/home/$(awk -v val=1000 -F ":" '$3==val{print $1}' /etc/passwd)/Desktop/eznixOS111" ]] && ln -s /usr/share/doc/eznixOS111 /home/$(awk -v val=1000 -F ":" '$3==val{print $1}' /etc/passwd)/Desktop/


